\renewcommand{\@makechapterhead}[1]{
  \reset@font
  \parindent \z@ 
  \vspace*{10\p@}%
  \hbox{%
    \vbox{\hsize=2cm
      \begin{tabular}{c}
        \scshape \strut \@chapapp{} \\
        \colorbox{ChapBlue}{%
          \vrule depth 7em width 0pt%
          \vrule height 0pt depth 0pt width 1ex%
          {\CNoV \thechapter}%
          \vrule height 0pt depth 0pt width 1ex%
          }
      \end{tabular}%
      }%
    \vbox{%
      \hfill \copy\@quotebox\vss\vskip 1em %\@printcites
      \advance\hsize by -2cm
      \hrule\par
      \vskip 6pt%
      \hspace{1em}%
      {\CTV\FmTi{#1}}
      }%
    }%
  \vskip 30\p@
}
